<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ie.nuim.cs.appkeep"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        
        <!--  For the Spashscreen Activity (Splash.java)-->
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        
         <!--  For the  Homescreen Activity (Homepage.java)-->
        <activity
            android:name=".Homepage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ie.nuim.cs.appkeep.HOMEPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
        
        <!--  For the Database Homescreen Activity (Database_Home123.java)-->
        <activity
            android:name=".Database_Home123"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ie.nuim.cs.appkeep.DATABASE_HOME123" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- For the Database View Activity (Database_View123.java) -->
        <activity
            android:name=".Database_View123"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ie.nuim.cs.appkeep.DATABASE_VIEW123" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <!-- For the DatePicker Dialog View Activity (PickerDate.java) -->
        <activity
            android:name=".PickerDate"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ie.nuim.cs.appkeep.PICKERDATE123" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- For the Alarm Activity (AlarmActivity.java) -->
        <activity
            android:name=".AlarmActivity"
            android:label="@string/app_name">
            <intent-filter >
                <action android:name="ie.nuim.cs.appkeep.ALARMACTIVITY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <!-- For the Alarm Receiver (AlarmReceiver.java) -->
        <receiver android:name=".AlarmReceiver" android:process="remote"/>
        
        
        
    </application>

</manifest>
